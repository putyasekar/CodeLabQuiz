<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#305581"
        tools:context=".TitleFragment">

        <ImageView
            android:id="@+id/trivia_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_65"
            android:layout_marginBottom="@dimen/_65"
            android:contentDescription="@string/trivia_icon"
            android:src="@drawable/trivia_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_play"
            android:layout_width="193dp"
            android:layout_height="28dp"
            android:layout_marginTop="332dp"
            android:background="#FEF200"
            android:contentDescription="@string/play"
            android:text="@string/play"
            app:layout_constraintEnd_toEndOf="@+id/trivia_icon"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="@+id/trivia_icon"
            app:layout_constraintTop_toTopOf="@+id/trivia_icon" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>